<form>
  <div class="form-group">
    <label for="fnln">Имя и фамилия</label>
    <input type="text" class="form-control" id="fnln" aria-describedby="fnln" placeholder="Имя и фамилия" required>
  </div>

  <div class="form-group">
    <label for="uni">Наименование ВУЗа</label>
    <input type="text" class="form-control" id="uni" aria-describedby="uni" placeholder="Минский государственный лингвистический университет" required>
  </div>

   <div class="form-group">
    <label for="phoneNumber">Номер телефона приемной</label>
    <input type="text" class="form-control" id="phoneNumber" aria-describedby="phoneNumber" placeholder="Номер телефона приемной" required>
  </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" id="email" aria-describedby="email" placeholder="Enter email" required>
  </div>

  <div class="form-group">
    <label for="program">Описание направлений обучения</label>
    <input type="text" class="form-control" id="program" aria-describedby="program" placeholder="Описание направлений обучения" required>
  </div>

  <div class="form-group">
    <label for="akkYears">Лет с момента аккредитации</label>
    <input type="text" class="form-control" id="akkYears" aria-describedby="akkYears" placeholder="20" required>
  </div>

  <div class="form-group">
    <label for="amountUSD">Объем инвестиций USD</label>
    <input type="text" class="form-control" id="amountUSD" aria-describedby="amountUSD" placeholder="1000" required>
  </div>

   <div class="form-group">
    <label for="course">Курс</label>
    <input type="text" class="form-control" id="course" aria-describedby="course" placeholder="23,50" readonly>
  </div>

  <div class="form-group">
    <label for="amountUAH">Оборот в UAH</label>
    <input type="text" class="form-control" id="amountUAH" aria-describedby="amountUAH" placeholder="23500" readonly>
  </div>

  <button type="submit" class="btn btn-primary sendbtn">Submit</button>
</form>